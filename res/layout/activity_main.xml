<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sysLtGray"
    tools:context="ru.kserditov.simplemp3player.MainActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/play_black" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnPlay"
            android:layout_alignTop="@+id/btnPlay"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/stop_disabled"
            android:enabled="false" />

    </RelativeLayout>

</FrameLayout>